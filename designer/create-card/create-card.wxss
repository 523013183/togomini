page {
  background: #fff
}
.create-card-layout {
    display: flex;
    flex-direction: column;
}

.top_text {
    font-size: 28rpx;
    color: #666;
    margin-left: 32rpx;
}

.avatar {
    height: 96rpx;
    width: 96rpx;
    border-radius: 8rpx;
}

.camera-layout {
    position: absolute;
    box-sizing: border-box;
    width: 40rpx;
    bottom: -8rpx;
    right: -8rpx;
    height: 40rpx;
    background: #C2C9D1;
    border-radius: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.input-container {
    display: flex;
    flex-direction: row;
}

.input-name {
    width: 160rpx;
    color: #6A7380;
    text-align: center;
    line-height: 104rpx;
    font-size: 28rpx;
}

.input-layout {
    width: 100%;
    height: 104rpx;
    margin-left: 56rpx;
    padding-left: 10rpx;
    font-size: 28rpx;
    box-sizing: border-box;
}

.name {
    display: flex;
    align-items: center;
}

.seperator {
    width: 678rpx;
    background: #eee;
    height: 1rpx;
    margin-left: 36rpx;
    margin-right: 36rpx;
}

.btn {
    position: relative;
    margin-top: 44rpx;
    margin-bottom: 48rpx;
    margin-left: 40rpx;
    width: 678rpx;
    height: 88rpx;
    color: #fff;
    font-size: 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8rpx;
    font-weight: 600;
}

.btn-done-bg {
    background-image: linear-gradient(135deg,#33ABFF 0%,#1A7AF8 100%);
    border-radius: 25px;
}

.btn-not-ready-bg {
    background-color: #bbb;
}

.slot {
    font-size: 28rpx;
    color: #333;
    width: 480rpx;
    height: 44rpx;
    justify-content: flex-start;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.fix-text-color {
    color: #666;
}
.long-tit .input-name{
  margin-left: 32rpx;
}
.long-tit .input-layout {
  margin-left: 24rpx;
}
.picker-inner {
  width: 100%;
  height: 104rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.picker-inner .arrow {
  width: 24rpx;
  height: 24rpx;
  margin-right: 32rpx;
}
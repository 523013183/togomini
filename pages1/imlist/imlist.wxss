/* pages1/imlist/imlist.wxss */

.item {
  box-sizing: border-box;
  width: 100%;
  height: 130rpx;
  background-color: #fff;
  margin-bottom: 2rpx;
  position: relative;
  padding: 10rpx 30rpx;
  display: flex;
  align-items: center;
}

.content {
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.icon {
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 24rpx;
  background-color: red;
  color: #fff;
  border-radius: 50%;
}

image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.msg {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  max-width: 440rpx;
  font-size: 24rpx;
}

.name{
  font-weight: bold;
  margin-bottom: 10rpx;
}

.msg>text{
  text-decoration: underline;
  color: gray;
  font-weight: bolder;
}

.del {
  height: 130rpx;
  background-color: red;
  position: absolute;
  right: -150rpx;
  text-align: center;
  line-height: 130rpx;
  color: #fff;
}
.system{
  margin: 20rpx;
  text-align: center;
  position: relative;
  width: 150rpx;
}
.system::after{
  content: '';
  width: 80%;
  height: 6rpx;
  border-radius: 10rpx;
  position: absolute;
  left: 10%;
  bottom: -5rpx;
  background-color: #f9e15c;
}
.read{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  color: green;
}
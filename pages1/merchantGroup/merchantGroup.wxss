.add_new {
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  height: 110rpx;
  line-height: 110rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9;
  /* border-bottom: 1rpx solid #ccc; */
}

.add_new .add {
  width: 140rpx;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  margin-right: 20rpx;
  background-color: #f9e15c;

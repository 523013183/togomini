}

.add_new .search .search_icon {
  margin: 0 6rpx 0 35rpx;
}

.item {
  width: 750rpx;
  height: 280rpx;
  background-color: #fff;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  align-items: center;
}

.img {
  width: 270rpx;
  height: 175rpx;
  background-color: #ffe252;
  border-radius: 10px;
  margin: 0 50rpx;
}

.right view:nth-child(1) {
  font-size: 32rpx;
  font-stretch: normal;
  line-height: 44rpx;
  letter-spacing: 0rpx;
  color: #333;
  font-weight: bolder;
  margin-bottom: 10rpx;
}

.right view:nth-child(2) {
  font-size: 28rpx;
  font-stretch: normal;
  line-height: 44rpx;
  letter-spacing: 0rpx;
  color: #e93323;
  font-weight: bold;
}

.right view:nth-child(3) {
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 44rpx;
  letter-spacing: 0rpx;
  color: #999;
}

.right view:nth-child(4) {
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 44rpx;
  letter-spacing: 0rpx;
  color: #999;
}

/* 弹窗 */

.screen {
  width: 100%;
  height: 100%;
  background-color: #fff;
  z-index: 9;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 0 60rpx;
}

.screen .price {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 60rpx;
}

.screen .price input {
  width: 270rpx;
  height: 55rpx;
  background-color: #f3f6fb;
  text-align: center;
  font-size: 24rpx;
}

.screen .wire {
  font-size: 30rpx;
  font-weight: bolder;
}

.title {
  margin-bottom: 30rpx;
  font-weight: bolder;
  margin-left: 60rpx;
}

.chose {
  display: flex;
  flex-direction: row;
  margin: 30rpx 60rpx 20rpx 60rpx;
  justify-content: space-between;
}

.price-item {
  padding: 10rpx 35rpx;
  background-color: #f3f6fb;
  /* margin-right: 20rpx; */

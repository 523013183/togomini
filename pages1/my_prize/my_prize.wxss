.head {
  width: 100%;
  height: 200rpx;
  background-color: rgb(47, 155, 254);
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}

page {
  overflow: hidden;
}

.title {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  height: 120rpx;
}

.title text:nth-child(1) {
  color: #fff;
  font-size: 30rpx;
  margin-bottom: 15rpx;
}

.title text:nth-child(2) {
  color: #fff;
  font-size: 26rpx;
}

.list {
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.item {
  width: 100%;
  height: 150rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 15rpx;
  box-sizing: border-box;
}

.left {
  display: flex;
  align-items: center;
}

.left image {
  width: 100rpx;
  height: 100rpx;
}

.left text {
  font-size: 26rpx;
  margin-left: 10rpx;
}

.right {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.right text:nth-child(1) {
  font-size: 28rpx;
}

.right text:nth-child(2) {
  font-size: 26rpx;
  color: #ccc;
}
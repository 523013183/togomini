/* pages1/serve/serve.wxss */
page {
  background-color: #fff;
}

.head {
  width: 100%;
  height: 100rpx;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-bottom: 2rpx solid #ccc;
  padding: 0 50rpx;
  box-sizing: border-box;
  z-index: 9;
}



.choose {
  display: flex;
  align-items: center;
  margin-right: 50rpx;
  position: relative;
  width: 100rpx;
}

.search {
  display: flex;
  align-items: center;
  border-radius: 15rpx;
  background-color: #fff;
  width: 500rpx;
  margin: 10rpx;
  padding: 0 10rpx;
}

input {
  font-size: 24rpx;
  height: 55rpx;
  width: 100%;
}

.content {
  /* margin-top: 100rpx; */
  margin-bottom: 50rpx;
}

.item {
  display: flex;
  padding: 30rpx 20rpx;
  border-bottom: 2rpx solid #ccc;
}

.left {
  width: 220rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.right {
  width: 470rpx;
}

.title {
  text-align: center;
  font-size: 30rpx;
  margin-top: -20rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.detail {
  max-width: 550rpx;
  font-size: 20rpx;
  line-height: 30rpx;
  /* max-height: 88rpx;
  overflow: hidden; */
}

.phone {
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 20rpx;
  left: 450rpx;
  font-size: 24rpx;
  background-color: #f2f2f2;
  padding: 5rpx;
}

.name {
  position: absolute;
  left: 240rpx;
  bottom: 24rpx;
  font-size: 24rpx;
}

.item {
  position: relative;
}

.classify {
  width: 140rpx;
  padding: 5rpx 0 15rpx 0;
  background-color: #fff;
  position: absolute;
  top: 75rpx;
  left: -30rpx;
}

.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  text-align: center;
  color: #ccc;
}

.classify view {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f2f2f2;
}
/* pages1/im/im.wxss */

.content {
  width: 100%;
  overflow: auto;
  padding-bottom: 250rpx;
  box-sizing: border-box;
}

.footer {
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  padding-bottom: calc(env(safe-area-inset-bottom));
  z-index: 5;
}

.emoji {
  position: relative;
  padding-top: 25rpx;
  /* height: 200rpx; */
  width: 100%;
  padding-bottom: 60rpx;
  display: flex;
  flex-wrap: wrap;
  padding-left: 30rpx;
  box-sizing: border-box;
  /* display: -webkit-box;
  overflow-x: scroll;
  -webkit-overflow-scrolling: touch; */
}

.emoji text {
  margin: 10rpx 20rpx;
}

input {
  width: 580rpx;
  font-size: 28rpx;
  height: 70rpx;
  background-color: #f2f2f2;
  border-radius: 20rpx;
  padding-left: 30rpx;
}

button {
  margin: 0;
  padding: 0;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 0;
}

button::after {
  border: none;
}

button image {
  width: 50rpx;
  height: 50rpx;
}

.left {
  padding: 5rpx 20rpx;
  margin: 30rpx 90rpx 30rpx 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 10;
  display: flex;
  justify-content: flex-start;
}

.right {
  padding: 5rpx 20rpx;
  margin: 30rpx 20rpx 30rpx 90rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 10;
  display: flex;
  justify-content: flex-end;
}

.right text {
  display: inline-block;
  padding: 20rpx;
  background-color: rgb(158, 234, 106);
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  max-width: 510rpx;
}

.left text {
  display: inline-block;
  padding: 30rpx 20rpx;
  background-color: #fff;
  border-top-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  max-width: 510rpx;
}

.block {
  width: 100%;
  box-sizing: border-box;
}

image {
  width: 100%;
  height: 100%;
  margin: 0;
  border-radius: 20rpx;
}

.avater {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  height: 120rpx;
  width: 100%;
}

.emojiimg {
  position: absolute;
  bottom: 30rpx;
  right: 50rpx;
  font-size: 26rpx;
  border-radius: 10rpx;
  width: 100rpx;
  height: 60rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  line-height: 60rpx;
  border: 3rpx solid rgb(45, 140, 241);
}

.title {
  /* text-decoration: underline ; */
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  max-width: 340rpx;
  margin: 20rpx 0 20rpx;
}

.shareimg {
  width: 350rpx;
  height: 260rpx;
  border-radius: 0;
}

.more {
  width: 100%;
  display: flex;
  align-content: center;
  padding-bottom: 100rpx;
  padding-top: 50rpx;
  flex-wrap: wrap;
}

.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 187rpx;
  margin-bottom: 20rpx;
}

.shade {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 1);
  position: fixed;
  top: 0;
  z-index: 2;
}

.detail {
  font-size: 22rpx;
  color: gray;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  max-width: 340rpx;
}

.price {
  color: red;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 10rpx 10rpx 0;
  box-sizing: border-box;
}

.msg {
  text-align: center;
  font-size: 22rpx;
  text-decoration: underline;
  color: #008edd;
}

page{
	background-color: #fafafa;
}
.make_selfText .msg{
	display: flex;
	align-items: center;
	height: 100rpx;
	line-height: 100rpx;
	padding: 0 40rpx;
	font-size: 30rpx;
	border-top: 1px solid #fafafa;
	background-color: #FFFFFF;
}
.make_selfText .msg2{
	border-bottom: 1px solid #fafafa;
}
.make_selfText .msg .mi{
	color: #E93323;
}
.make_selfText .left_msg{
	display: flex;
	padding: 30rpx 40rpx 0;
	font-size: 30rpx;
	background-color: #FFFFFF;
}
.make_selfText > view >text{
	width: 160rpx;
	font-size: 30rpx;
}
.make_selfText > view >input{
	width: calc(100% - 160rpx);
	margin-left: 35rpx;
}
.make_selfText > view >textarea{
	width: calc(100% - 160rpx);
	height: 160rpx;
	margin-left: 35rpx;
}
.make_selfText > button{
	width: 90%;
	height: 90rpx;
	line-height: 90rpx;
	margin-top: 60rpx;
	font-size: 32rpx;
	font-weight: bold;
	background-color: #f9e15c;
}
.make_selfText .bottom{
	position: absolute;
	bottom: 0;
	left: 0;
	display: flex;
	width: 100%;
	height: 110rpx;
	line-height: 110rpx;
	text-align: center;
	font-size: 30rpx;
	background-color: #FFFFFF;
}
.make_selfText .bottom > view{
	flex: 1;
}
.make_selfText .bottom .apply_proof{
	flex: 1;
	border-right: 1px solid #F6F6F6;
	background-color: #f9e15c;
}




page{
	background-color: #FFFFFF;
}
.g_product_detail .product_data{
	margin-bottom: 30rpx;
	padding: 0 40rpx;
}
.g_product_detail .product_name{
	font-size: 40rpx;
	font-weight: bold;
}
.g_product_detail .product_center{
	display: flex;
	justify-content: space-between;
	font-size: 35rpx;
	margin: 20rpx 0 40rpx;
}
.g_product_detail .product_center > text{
	color: #e93323;
}
.g_product_detail .product_center .style{
	font-size: 26rpx;
}
.g_product_detail .product_center .style > text{
	display: inline-block;
	height: 48rpx;
	line-height: 48rpx;
	padding: 0 35rpx;
	color: #333333;
	margin-left: 20rpx;
	border-radius: 24rpx;
	background-color: #ffe252;
}
.g_product_detail .product_data .size,.material{
 	font-size: 30rpx;
	margin-bottom: 20rpx;
}
.g_product_detail .product_data .size .title{
 	color: #999999;
}
.g_product_detail .product_data .size .size_detail{
	display: inline-block;
 	position: relative;
	width: calc(100% - 80rpx);
	margin: -40rpx 0 0 80rpx;
}

.g_product_detail .product_data .material .title{
 	color: #999999;
}
.g_product_detail .bg_gray{
	position: relative;
	left: -40rpx;
 	width: calc(100% + 80rpx);
	height: 30rpx;
	background-color: #F6F6F6;
}
.g_product_detail .product_detail .title{
	height: 90rpx;
	line-height: 90rpx;
	border-bottom: 1px solid #F6F6F6;
	padding: 0 40rpx;
	font-size: 30rpx;
	font-weight: bold;
}
.g_product_detail .product_detail .desc{
	font-size: 30rpx;
	margin: 30rpx 40rpx 50rpx;
	color: #95918e;
}
.g_product_detail .from{
	width: 100%;
	font-size: 26rpx;
	padding: 40rpx 0;
	margin: 0 40rpx;
	color: #999999;
	border-top: 1px solid #F6F6F6;
}
.g_product_detail .from > text{
	color: #3aa7f3;
}




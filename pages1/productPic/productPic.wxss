page{
	background-color: #fafafa;
}
.products_pic .title_wrapper{
	font-size: 32rpx;
	text-align: center;
	padding: 30rpx 0;
	border-top: 1px solid #fafafa;
	background-color: #FFFFFF;
}
.products_pic .title_wrapper .style{
	font-size: 28rpx;
	color: #999999;
}
.products_pic .pic_wrapper{
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
	padding: 20rpx 40rpx 0;
}
.products_pic .pic_wrapper .pic_item{
	position: relative;
	width: calc((100% - 30rpx)/2);
	height: 195rpx;
	margin-bottom: 20rpx;
}
.products_pic .pic_wrapper .pic_item .pic{
	width: 100%;
	height: 100%;
	border-radius: 10rpx;
}
.products_pic .pic_wrapper .pic_item .pic_circle{
	position: absolute;
	top: 20rpx;
	left: 20rpx;
	width: 40rpx;
	height: 40rpx;
}
.products_pic > button{
	width: 90%;
	height: 90rpx;
	line-height: 90rpx;
	font-size: 32rpx;
	font-weight: bold;
	margin-top: 40rpx;
	background-color: #F9E15C;
}



